bool generate_btn()
{
if(button.empty()){
		button.push_back(Button());
		button.push_back(Button());
		button[0].size(0,0,50,45);
		button[1].size(60,0,85,45);
		button[0].position(GirdW+button[0].ins.w,SCREEN_HEIGHT-button[0].ins.h);
		button[1].position(SCREEN_WIDTH-button[1].ins.w,SCREEN_HEIGHT-button[1].ins.h);
}		
return 0;
}

void onClick(){
